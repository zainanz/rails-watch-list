<div class="" style="background-image: radial-gradient(#241f31 1%, black 95%);height: 100%">
  <div class="w-100 p-2 d-flex justify-content-end bg-black sticky-top">
    <%= link_to "Create List", new_list_path, class: "btn btn-info m-1 fw-bold lh-lg mx-2" %>
    <%= link_to "My List", root_path, class: "btn btn-info m-1 fw-bold lh-lg mx-4" %>

  </div>
  <div class="card-categor rounded" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.3)), url(https://cdn.dribbble.com/userupload/12254505/file/original-8012c0bcfac68053bbd9f87b26278da1.png?resize=752x)">
    <h1 class="home-header">movies lists</h1>
  </div>

  <%if @lists.length == 0 %>
    <div class="show-header text-center text-light" style="">You dont have a list yet!</div>
  <%else%>
    <div class="p-5" style="">
      <div class="cards">
        <% @lists.each do |list|%>
          <%= link_to list_path(list), class:"home-card" do %>
            <div class="card-category m-2" style="background-image: url(https://i.pinimg.com/236x/84/1f/50/841f507da4e560ddb2743010e08f668f--cool-hand-luke-lemony-snicket.jpg)">
              <h2 class="fw-bolder fs-1 "><%=list.name%></h2>
            </div>
          <% end %>
        <%end%>
      </div>
    </div>
  <%end%>
</div>
