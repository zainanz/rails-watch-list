<div class="bg bg-dark">
  <div class="w-100 p-1 d-flex justify-content-end shadow-lg">
    <%= link_to "Create List", new_list_path, class: "btn btn-secondary m-1 fw-bold lh-lg" %>
    <%= link_to "My List", lists_path, class: "btn btn-secondary m-1 fw-bold lh-lg" %>
  </div>
  <div class="w-100 bg-secondary fit-image" style="background-image: url('https://wallpapercave.com/wp/wp2932549.jpg'); height:65vh">
  </div>
  <div class="py-5"><h1 class="text-center text-white fw-bolder show-header"><%= @list.name%></h1></div>
  <div class="container d-flex justify-content-evenly">
    <%@bookmarks.each do |bookmark|%>
      <div class="card bg-light" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, class:"card-img-top"%>
      <div class="card-body">
        <p class="card-text"><%=bookmark.movie.overview%></p>
      </div>
        <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"d-flex justify-content-end" do %>
        <i class="fa-solid fa-trash"></i>
      <%end%>
    </div>
    <%end%>
  <%= link_to "Add Movies", new_list_bookmark_path(@list), class: "btn btn-secondary fly-button"%>
  </div>

</div>
