<div class="" >
  <div class="w-100 p-1 d-flex justify-content-between shadow-lg fixed-top bg-black">
    <%= link_to "Add Movies", new_list_bookmark_path(@list), class: "btn btn-info m-1 fw-bold lh-lg"%>
    <div>
      <%= link_to "My List", lists_path, class: "btn btn-info m-1 fw-bold lh-lg" %>
      <%= link_to "Create List", new_list_path, class: "btn btn-info m-1 fw-bold lh-lg" %>
    </div>
  </div>
  <div class="w-100 bg-secondary fit-image" style="background-image: url('https://w.wallhaven.cc/full/83/wallhaven-83kvv1.jpg'); height:65vh">
  </div>
  <div style="height:100%; background-image: radial-gradient(circle ,#241f31 1%, black 95%);">
  <div class="py-5"><h1 class="text-center show-header"><%= @list.name%></h1></div>
    <div class="d-flex justify-content-evenly flex-wrap p-5">
      <%if @bookmarks.length == 0%>
        <div class="text-white fs-3 fst-italics"> No bookmarks </div>
        <div class="card bg-secondary" style="width: 18rem;">
            <div class="card-body">
              <%= image_tag "https://cdn4.iconfinder.com/data/icons/vectory-bonus-3/40/button_add-512.png" %>
            </div>
          </div>
      <%else%>
        <%@bookmarks.each do |bookmark|%>
          <div class="card bg-light m-3" style="width: 25rem;">
            <%= image_tag bookmark.movie.poster_url, class:"card-img-top"%>
            <div class="card-body">
              <p class="card-text"><%=bookmark.movie.overview%></p>
            </div>
            <div class="d-flex justify-content-between border bg-light p-2">
              <span class="px-4 fst-italic comment-spacing">-<%=bookmark.comment%></span>
              <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
              <i class="fa-solid fa-trash text-gray"></i>
              <%end%>
            </div>
          </div>
        <%end%>
      <%end%>
    </div>
  </div>
</div>
